              <div class="media">
                <div class="media-left productSlider">
                  <div id="carousel" class="carousel slide" data-ride="carousel">
                    <div class="carousel-inner">
                      <% @images.each_with_index do |image, i| %>
                      <% if i == 0 %>
                        <div class="item active" data-thumb="0">
                      <% else %>
                        <div class="item" data-thumb=<%= "#{i}" %> >
                      <% end %>
                          <%= image_tag("/spree/products/#{image.id}/large/#{image.attachment_file_name}") %>
                        </div>
                        <% break if i == (@images.count - 1) %>
                      <% end %>
                    </div>
                  </div>
                  <div class="clearfix">
                    <div id="thumbcarousel" class="carousel slide" data-interval="false">
                      <div class="carousel-inner">
                        <% @images.each_with_index do |image, i| %>
                          <div data-target="#carousel" data-slide-to=<%= "#{i}" %> class="thumb"><%= image_tag("/spree/products/#{image.id}/small/#{image.attachment_file_name}") %></div>
                          <% break if i == (@images.count - 1) %>
                        <% end %>
                      </div>
                      <a class="left carousel-control" href="#thumbcarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                      </a>
                      <a class="right carousel-control" href="#thumbcarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                      </a>
                    </div>
                  </div>
                </div>
